# Monolayer MoS2: computation of the total energy

# Unit cell
acell  3.15 3.15 20 angstrom
rprim
 0.5 -0.86602540378 0
 0.5  0.86602540378 0
 0.0  0.0           1

# Atom types
ntypat 2
znucl 42 16
pp_dirpath "./persudo/"
pseudos "Mo.psp8, S.psp8"

# Atomic structure
natom 3
typat 1 2 2
xred
  1/3  2/3  0.0 
  2/3  1/3  -0.0919442350
  2/3  1/3  0.0919442350

# Plane-wave basis
ecut  12.0
nsym 1
chksymbreak 0

# K-point sampling
kptopt 1          # Option for the automatic generation of k points, taking
                  # into account the symmetry
ngkpt 3 1 1       # This is a 2x2x2 grid based on the primitive vectors
nshiftk 1         # of the reciprocal space (that form a BCC lattice !),
                  # repeated four times, with different shifts :
shiftk 0 0 0
nkpt 2

# SCF settings
nstep 10
toldfe 1.0d-6
diemac 12.0
