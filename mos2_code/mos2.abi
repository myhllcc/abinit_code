# Monolayer MoS2: computation of the total energy

ndtset 2
# Unit cell
acell  3.15 3.15 20 angstrom
rprim
 0.5 -0.86602540378 0
 0.5  0.86602540378 0
 0.0  0.0           1

# Atom types
ntypat 2
znucl 42 16
pp_dirpath "./persudo/"
pseudos "Mo.psp8, S.psp8"

# Atomic structure
natom 3
typat 1 2 2
xred
  1/3  2/3  0.0 
  2/3  1/3  -0.0919442350
  2/3  1/3  0.0919442350

# Plane-wave basis
ecut  12.0
nsym 1
chksymbreak 0

# Defination of the SCF procedure
nstep 10

#Dataset 1 K-point sampling
kptopt1 1          # Option for the automatic generation of k points, taking
                  # into account the symmetry
ngkpt1 3 1 1       # This is a 2x2x2 grid based on the primitive vectors
nshiftk1 1         # of the reciprocal space (that form a BCC lattice !),
                  # repeated four times, with different shifts :
shiftk1 0 0 0
prtden1 1
toldfel 1.0d-6

#dataset 2: The band structure
iscf2 -2
getden2 -1
kptopt2 -3
nband2 8
ndivsm2 10
kptbounds2 0    0    0 # gamma
           1/3  1/3  0 #K
           0.5  0    0 #M
            1    1    1 #gamma
tolwfr2   1.0d-12
enuit2   1